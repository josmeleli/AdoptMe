<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:id="@+id/main"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="24dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_revert"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notificaciones"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginLeft="16dp" />

        </LinearLayout>

        <!-- Notificaciones Push -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notificaciones Push"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:paddingBottom="12dp" />

                <CheckBox
                    android:id="@+id/cb_push_notifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Activar notificaciones push"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:checked="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recibe alertas sobre nuevas mascotas disponibles y actualizaciones importantes"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Configuración de Sonido y Vibración -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sonido y Vibración"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:paddingBottom="12dp" />

                <CheckBox
                    android:id="@+id/cb_sounds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sonidos de notificación"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:checked="true" />

                <CheckBox
                    android:id="@+id/cb_vibration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vibración"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:checked="true" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tipos de Notificaciones -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipos de Notificaciones"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:paddingBottom="12dp" />

                <CheckBox
                    android:id="@+id/cb_new_pets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nuevas mascotas disponibles"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:checked="true" />

                <CheckBox
                    android:id="@+id/cb_adoption_updates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Actualizaciones de adopción"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:checked="true" />

                <CheckBox
                    android:id="@+id/cb_messages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mensajes y consultas"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:checked="true" />

                <CheckBox
                    android:id="@+id/cb_reminders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recordatorios importantes"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:checked="false" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>