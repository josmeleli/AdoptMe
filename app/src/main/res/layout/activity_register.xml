<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/main"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5F7FA"
        tools:context=".RegisterActivity">

        <!-- Contenedor principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="28dp"
            android:paddingEnd="28dp"
            android:paddingTop="12dp"
            android:paddingBottom="2dp">

            <!-- Título principal -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear Cuenta"
                android:textSize="28sp"
                android:textColor="#3A538D"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="22dp"
                android:letterSpacing="0.1" />

            <!-- Campo Nombres -->

            <!-- Campo Apellidos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Nombres"
                    android:textColor="#3A538D"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_nombres"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:background="#F8F9FA"
                    android:hint="Ingresa tus nombres"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:textSize="14sp"
                    tools:ignore="Autofill,HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:layout_marginBottom="10dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apellidos"
                    android:textSize="13sp"
                    android:textColor="#3A538D"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp" />

                <EditText
                    android:id="@+id/editText_apellidos"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:inputType="textPersonName"
                    android:hint="Ingresa tus apellidos"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:background="#F8F9FA"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    tools:ignore="Autofill,HardcodedText" />

            </LinearLayout>

            <!-- Campo DNI -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:layout_marginBottom="10dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DNI"
                    android:textSize="13sp"
                    android:textColor="#3A538D"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp" />

                <EditText
                    android:id="@+id/editText_dni"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:inputType="number"
                    android:hint="12345678"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:background="#F8F9FA"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:maxLength="8"
                    tools:ignore="Autofill,HardcodedText" />

            </LinearLayout>

            <!-- Campo Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="5dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo electrónico"
                    android:textSize="13sp"
                    android:textColor="#3A538D"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/editText_email"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:inputType="textEmailAddress"
                    android:hint="tu.email@ejemplo.com"
                    android:textSize="15sp"
                    android:padding="12dp"
                    android:background="#F8F9FA"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    tools:ignore="Autofill,HardcodedText" />

            </LinearLayout>

            <!-- Campo Teléfono -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:layout_marginBottom="10dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teléfono"
                    android:textSize="13sp"
                    android:textColor="#3A538D"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp" />

                <EditText
                    android:id="@+id/editText_telefono"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:inputType="phone"
                    android:hint="987654321"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:background="#F8F9FA"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:maxLength="9"
                    tools:ignore="Autofill,HardcodedText" />

            </LinearLayout>

            <!-- Campo Contraseña -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="5dp"
                android:layout_marginBottom="10dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contraseña"
                    android:textSize="13sp"
                    android:textColor="#3A538D"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/editText_password"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:inputType="textPassword"
                    android:hint="••••••••"
                    android:textSize="15sp"
                    android:padding="12dp"
                    android:background="#F8F9FA"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    tools:ignore="Autofill,HardcodedText" />

            </LinearLayout>

            <!-- Campo Confirmar Contraseña -->

            <!-- Checkbox términos y condiciones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/checkbox_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#3A538D"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Acepto los términos y condiciones"
                    android:textSize="13sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <!-- Botón registrarse -->
            <Button
                android:id="@+id/button_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="REGISTRARSE"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:backgroundTint="#3A538D"
                android:layout_marginBottom="10dp"
                android:elevation="6dp"
                android:letterSpacing="0.05"
                android:stateListAnimator="@null" />

            <!-- Link para volver al login -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿Ya tienes una cuenta? "
                    android:textSize="12sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/textView_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Iniciar Sesión"
                    android:textSize="12sp"
                    android:textColor="#3A538D"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>