<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Indicador de estado (barra lateral) -->
        <View
            android:id="@+id/status_indicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:background="#FFA500" />

        <!-- Imagen de la mascota -->
        <ImageView
            android:id="@+id/iv_pet_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_corners"
            android:src="@drawable/search1" />

        <!-- Información de la solicitud -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- Nombre de la mascota -->
            <TextView
                android:id="@+id/tv_pet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rocky"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <!-- Info de la mascota -->
            <TextView
                android:id="@+id/tv_pet_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perro • Labrador • 2 años"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />

            <!-- Estado -->
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendiente de revisión"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFA500"
                android:layout_marginTop="8dp" />

            <!-- Fecha de solicitud -->
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15/01/2025 14:30"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginTop="4dp" />

            <!-- ID de solicitud -->
            <TextView
                android:id="@+id/tv_request_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Solicitud #1"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

