<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".ui.search.SearchFragment">

    <!-- Header con buscador y categorías -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <!-- Barra de búsqueda -->
        <LinearLayout
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/search_background"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_search"
                android:tint="#666666"
                android:contentDescription="Buscar" />

            <EditText
                android:id="@+id/search_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Ej: labrador, 2, macho..."
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:layout_marginStart="12dp"
                android:inputType="text"
                android:maxLines="1"
                android:imeOptions="actionSearch" />

        </LinearLayout>

        <!-- Título Categorías -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categorías"
            android:textColor="#333333"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Botones de categorías en grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_categoria_perro"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="🐕\nPerro"
                android:textSize="11sp"
                android:textColor="@android:color/white"
                android:backgroundTint="#4A6FA5"
                style="@style/Widget.Material3.Button" />

            <Button
                android:id="@+id/btn_categoria_gato"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="🐈\nGato"
                android:textSize="11sp"
                android:textColor="@android:color/white"
                android:backgroundTint="#4A6FA5"
                style="@style/Widget.Material3.Button" />

            <Button
                android:id="@+id/btn_categoria_ave"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="🦜\nAve"
                android:textSize="11sp"
                android:textColor="@android:color/white"
                android:backgroundTint="#4A6FA5"
                style="@style/Widget.Material3.Button" />

            <Button
                android:id="@+id/btn_categoria_conejo"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="🐇\nConejo"
                android:textSize="11sp"
                android:textColor="@android:color/white"
                android:backgroundTint="#4A6FA5"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

    </LinearLayout>

    <!-- Título y contador de resultados -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mascotas destacadas"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_results_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 resultados"
            android:textColor="#666666"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Contenedor para RecyclerView, Loading y Empty State -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- RecyclerView con Grid de 2 columnas -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_pets"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:clipToPadding="false"
            tools:listitem="@layout/item_pet_card" />

        <!-- Loading Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Vista vacía (sin resultados) -->
        <LinearLayout
            android:id="@+id/empty_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@android:drawable/ic_menu_search"
                android:tint="#CCCCCC"
                android:contentDescription="Sin resultados" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No se encontraron mascotas"
                android:textColor="#999999"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intenta ajustar los filtros de búsqueda"
                android:textColor="#CCCCCC"
                android:textSize="13sp"
                android:textAlignment="center"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>

