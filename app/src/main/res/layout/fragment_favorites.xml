<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F8F8"
    tools:context=".ui.favorites.FavoritesFragment">

    <!-- Header Section -->

    <!-- Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_white_background"
        android:elevation="2dp"
        android:orientation="horizontal"
        android:padding="12dp">

        <EditText
            android:id="@+id/search_favorites"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Buscar en favoritos..."
            android:inputType="text"
            android:textSize="16sp"
            android:textColorHint="#999999" />

        <ImageButton
            android:id="@+id/btn_search_favorites"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_search"
            android:contentDescription="Buscar" />

    </LinearLayout>

    <!-- Filter Tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_all_favorites"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:background="@drawable/filter_button_selector"
            android:text="Todos"
            android:textSize="12sp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_dogs_favorites"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/filter_button_selector"
            android:text="Perros"
            android:textSize="12sp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_cats_favorites"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/filter_button_selector"
            android:text="Gatos"
            android:textSize="12sp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_others_favorites"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:background="@drawable/filter_button_selector"
            android:text="Otros"
            android:textSize="12sp"
            android:textAllCaps="false" />

    </LinearLayout>

    <!-- Favorites List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp">

            <!-- Favorite Pet 1 - Canela -->
            <LinearLayout
                android:id="@+id/favorite_pet_canela"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_white_background"
                android:elevation="2dp"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/pet_placeholder"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Canela"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perro • Golden Retriever"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 años • Hembra"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agregado hace 3 días"
                        android:textSize="10sp"
                        android:textColor="#CCCCCC"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/btn_remove_canela"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_delete"
                        android:contentDescription="Quitar de favoritos" />

                    <Button
                        android:id="@+id/btn_contact_canela"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/filter_button_selector"
                        android:text="Contactar"
                        android:textSize="10sp"
                        android:textAllCaps="false"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Favorite Pet 2 - Sebas -->
            <LinearLayout
                android:id="@+id/favorite_pet_sebas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_white_background"
                android:elevation="2dp"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/pet_placeholder"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sebas"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gato • Siamés"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 año • Macho"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agregado hace 1 semana"
                        android:textSize="10sp"
                        android:textColor="#CCCCCC"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/btn_remove_sebas"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_delete"
                        android:contentDescription="Quitar de favoritos" />

                    <Button
                        android:id="@+id/btn_contact_sebas"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/filter_button_selector"
                        android:text="Contactar"
                        android:textSize="10sp"
                        android:textAllCaps="false"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Favorite Pet 3 - Caramelo -->
            <LinearLayout
                android:id="@+id/favorite_pet_caramelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_white_background"
                android:elevation="2dp"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/pet_placeholder"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Caramelo"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perro • Mestizo"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 años • Macho"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agregado hace 2 días"
                        android:textSize="10sp"
                        android:textColor="#CCCCCC"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/btn_remove_caramelo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_delete"
                        android:contentDescription="Quitar de favoritos" />

                    <Button
                        android:id="@+id/btn_contact_caramelo"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/filter_button_selector"
                        android:text="Contactar"
                        android:textSize="10sp"
                        android:textAllCaps="false"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Empty State (initially hidden) -->
            <LinearLayout
                android:id="@+id/empty_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:alpha="0.3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No tienes mascotas favoritas"
                    android:textSize="18sp"
                    android:textColor="#999999"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Explora y agrega mascotas a tus favoritos"
                    android:textSize="14sp"
                    android:textColor="#CCCCCC"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/btn_explore_pets"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/filter_button_selector"
                    android:text="Explorar mascotas"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>