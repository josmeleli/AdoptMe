<resources>

    <!-- Tema base normal -->
    <style name="Theme.AdoptMe" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores normales de tu app -->
        <item name="android:textColorPrimary">?android:attr/textColorPrimary</item>
        <item name="android:textColorSecondary">?android:attr/textColorSecondary</item>
        <item name="android:fontFamily">sans-serif</item> <!-- fuente básica -->
    </style>

    <!-- Tema de contraste alto -->
    <style name="Theme.AdoptMe.HighContrast" parent="Theme.AdoptMe">
        <!-- Texto negro fuerte -->
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#000000</item>

        <!-- Negrita global -->
        <item name="android:textStyle">bold</item>

        <!-- Fuente básica también -->
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Apariencia de texto para contraste alto (opcional) -->
    <style name="HighContrastTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>
